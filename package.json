{
  "name": "advantage",
  "version": "1.0.0",
  "description": "AI-Powered Social Commerce Platform",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.9.17",
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.17.9",
    "expo": "~50.0.2",
    "expo-auth-session": "~5.4.0",
    "expo-build-properties": "^0.14.8",
    "expo-camera": "~14.0.4",
    "expo-constants": "~15.4.5",
    "expo-crypto": "~12.8.0",
    "expo-image-picker": "~14.7.1",
    "expo-linear-gradient": "^14.1.5",
    "expo-location": "~16.5.3",
    "expo-media-library": "~15.9.1",
    "expo-secure-store": "~12.8.1",
    "expo-sharing": "~11.10.0",
    "expo-splash-screen": "~0.26.4",
    "expo-status-bar": "~1.11.1",
    "native-base": "^3.4.28",
    "react": "^18.2.0",
    "react-native": "0.73.2",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-maps": "1.10.0",
    "react-native-reanimated": "~3.6.1",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@testing-library/react-native": "^11.5.0",
    "@types/expo__vector-icons": "^9.0.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^19.1.6",
    "@types/react-native": "^0.73.0",
    "@types/react-navigation": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^13.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "jest-expo": "^53.0.9",
    "prettier": "^3.1.1",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.8.3"
  },
  "private": true,
  "resolutions": {
    "react-test-renderer": "18.2.0"
  },
  "jest": {
    "preset": "jest-expo",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@native-base/.*|isows|@supabase/.*)"
    ],
    "globals": {
      "__DEV__": true,
      "process": {
        "env": {
          "EXPO_PUBLIC_SUPABASE_URL": "mock_supabase_url",
          "EXPO_PUBLIC_SUPABASE_ANON_KEY": "mock_supabase_anon_key"
        }
      }
    },
    "moduleNameMapper": {
      "react-dom": "react-native",
      "expo-font": "<rootDir>/__mocks__/expo-font.js",
      "@expo/vector-icons": "<rootDir>/__mocks__/@expo/vector-icons.js",
      "expo/virtual/env": "<rootDir>/__mocks__/expo-virtual-env.js",
      "@react-native-async-storage/async-storage": "<rootDir>/__mocks__/@react-native-async-storage/async-storage.js",
      "expo-secure-store": "<rootDir>/__mocks__/expo-secure-store.js",
      "fs": "<rootDir>/__mocks__/fs.js"
    }
  }
}
